<%= form_for @user do |user| %>

          <%= user.label :name %>
          <%= user.text_field :name %>

          <%= user.label :email %>
          <%= user.text_field :email %>

          <%= user.label :password %>
          <%= user.password_field :password %>

          <%= user.label 'Confirm Password' %>
          <%= user.password_field :password_confirmation %>


          <% if @user.persisted? %>

          <%= user.submit 'Edit Profile' %>

          <% else %>
          <%= user.submit 'Sign Up' %>


          <% end %>

<% end %>
